    <div class="container">
      <div class="row justify-content-center">
        <div class="col-10">
        <%= form_with(model: @article, local: true) do |f| %>
          <div class="form-group row mt-4">
            <%= f.label :title, class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_field :title, class: "form-control" %>
            </div>
          </div>
          
          <div class="form-group row mt-4">
            <%= f.label :description,  class: "col-2 col-form-label" %>
            <div class="col-10">
              <%= f.text_area :description, rows: 10, class: "form-control" %>
            </div>
          </div>
          <div class="form-group col-2 mx-auto mt-4">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        <% end %>
        </div>
      </div>
      <div class = "row justify-content-center mt-10 mb-3">
        <%= link_to '[ Close ]', articles_path, class: "btn" %>
      </div>
    </div>