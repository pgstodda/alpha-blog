  <h1 class="text-center mt-4">Articles</h1>

  <div class="container">
    <% @articles.each do |a| %>
    <div class="row justify-content-md-center mt-4">
      <div class="col-8">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header">
            <%= link_to a.title, article_path(a), class: "text-success" %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= rand(1000) %> views</h5>
            <p class="card-text"><%= truncate a.description, length: 32 %></p>
            <%= link_to "View", article_path(a.id), class: "btn btn-outline-success" %>
            <%= link_to "Edit", edit_article_path(a.id), class: "btn btn-outline-primary" %>
            <%= link_to "Delete", article_path(a.id), method: :delete, data: {confirm: "Delete: Are you sure?"}, class: "btn btn-outline-warning" %>
          </div>
          <div class="card-footer text-muted">
            <small>Updated <%= time_ago_in_words(a.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
